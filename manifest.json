{ 
    "name" : "Fact Checker", 
    "description" : "Fact checker extension for WHACK '25", 
    "version" : "0.1", 
    "manifest_version" : 3,
    "host_permissions": [
    "https://factchecktools.googleapis.com/*",
    "https://raw.githubusercontent.com/*"
    ],
    "permissions" : ["sidePanel", "scripting", "activeTab", "tabs"],
    "side_panel" : {
        "default_path" : "sidepanel/sidepanel.html"
    },
    "background" : {"service_worker" : "service_worker.js"},
    "action" : { 
        "default_icon" : "images/factchecker.png"
    }, 

    "content_scripts" : [{
        "matches" : ["<all_urls>"],
        "js" : ["analyse_page.js"]
    }],

    "web_accessible_resources": [
  {
    "resources": ["mbfc.json"],
    "matches": ["<all_urls>"]
  }
],

 "icons": {
   "16": "images/factchecker16.png",
   "32": "images/factchecker32.png",
   "48": "images/factchecker48.png",
   "128": "images/factchecker128.png"
 }

    
}